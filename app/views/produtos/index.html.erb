<p id="notice"><%= notice %></p>

<h1>Produtos</h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          <%= form_tag produtos_path, method: :get do %>
            Nome <%= text_field_tag :nome, nil,
              placeholder: 'Filtrar por nome' %>
            <%= fa_icon "search", onclick: "$(this).parent('form').submit();" %>
          <% end %>
        </th>
        <th>Descricao</th>
        <th>Quantidade</th>
        <th>Preco</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
  
    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td><%= produto.quantidade %></td>
          <td><%= produto.preco %></td>
          <td><%= link_to '', produto, class: "fa fa-search fa-lg" %></td>
          <td><%= link_to '', edit_produto_path(produto), class: "fa fa-pencil-square-o fa-lg" %></td>
          <td>
            <%= link_to '',
            produto, method: :delete, class: "fa fa-eraser fa-lg", 
            data: { confirm: "Tem certeza que deseja remover?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Criar Produto', new_produto_path %>
</div>